@model CRUD_2.Models.EmpleadoViewModel
@{
    ViewData["Title"] = "Eliminar empleado";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form action="Delete" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" asp-for="Id" readonly class="form-control"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" readonly class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Apellido</label>
        <input type="text" asp-for="Apellido" readonly class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Fecha de Nacimiento</label>
        <input type="text" asp-for="FechaNacimiento" readonly class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">E-Mail</label>
        <input type="text" asp-for="Email" readonly class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Salario</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="text" asp-for="Salario" readonly class="form-control" />
        </div>        
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-danger" onclick="return function('Esta seguro de borrar empleado: @Model.NombreCompleto')">Eliminar</button>
    </div>
</form>


